<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
      <div class="card w-100">
        <div class="card-body p-4">
          <%if(success_message){%>
          <div class="row">
            <p class="alert alert-info"><%=success_message%></p>
          </div>
          <%}%>
          <div class="row">
            <h5 class="card-title fw-semibold mb-4 col-lg-6">My Posts</h5>
            <span class="col-lg-6 text-left">
              <div class="w-100 text-left" style="text-align: left">
                <a href="/post/create" class="btn btn-info">Create New Post/a>
              </div>
            </span>
          </div>
          <div class="table-responsive">
            <table class="table text-nowrap mb-0 align-middle">
              <thead class="text-dark fs-4">
                <tr>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">ID</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Title</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Description</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Creation Date</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">operations</h6>
                  </th>
                </tr>
              </thead>
              <tbody>
                <%if(count === 0){%>
                <tr>
                  <td colspan="5">
                    <p class="alert alert-warning text-center">
                      You have not created any posts!
                    </p>
                  </td>
                </tr>
                <%}else{%> <%posts.forEach(post => {%>
                <tr>
                  <td><%=post._id%></td>
                  <td><%=post.title%></td>
                  <td><%=post.content%></td>
                  <td>
                    <%=moment(post.createdAt).locale("en").format('LL')%>
                  </td>
                  <td>
                    <form
                      action="/post/delete/<%=post._id%>"
                      method="post"
                      class="d-inline">
                      <button type="submit" class="btn btn-danger">حذف</button>
                    </form>
                    <a href="/post/<%=post._id%>" class="btn btn-success"
                      >View</a
                    >
                  </td>
                </tr>
                <%})%> <%}%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  