<div class="col-lg-12 d-flex align-items-stretch">
    <div class="card w-100">
      <%if(showBack){%>
      <div class="p-3">
        <a href="/post/create" class="btn btn-danger">All Categories</a>
      </div>
      <%}%>
      <div class="p-3">
        <%if(!options){%> <%if(categories && categories.length > 0 ){%>
        <ul>
          <%categories.forEach(category => {%>
          <li>
            <a
              href="/post/create?slug=<%=category.slug%>"
              class="w-100 p-3 d-block bg-light text-dark">
              <span
                class="ti ti-<%=category.icon%> nav-small-cap-icon fs-4"></span>
              <span><%=category.name%></span>
            </a>
          </li>
          <%})%>
        </ul>
        <%}%> <%}else{%>
          <form action="/post/create" method="post" enctype="multipart/form-data">
          <div class="p-2">
            <label>Photos</label>
            <input type="file" name="images" multiple class="form-control" />
          </div>
          <div class="p-2">
            <label>Title</label>
            <input
              type="text"
              name="title_post"
              placeholder="Title"
              class="form-control" />
          </div>
          <div class="p-2">
            <label>Description</label>
            <textarea class="form-control" name="description" placeholder="Description"></textarea>
          </div>
          <div class="p-2">
            <label>Price</label>
            <input
              type="text"
              name="amount"
              placeholder="Price"
              class="form-control" />
          </div>
          <%options.forEach(option => {%>
          <label><%=option.title%><%=option.required? " * ": ""%></label>
          <%if(option.type === "array"){%>
          <div class="p-2">
            <select name="<%=option.key%>" class="form-select">
              <%option.enum.forEach(item => {%>
              <option value="<%=item%>"><%=item%></option>
              <%})%>
            </select>
          </div>
          <%}else{%>
          <div class="p-2">
            <input
              type="text"
              name="<%=option.key%>"
              class="form-control"
              placeholder="<%=option.guid%>" />
          </div>
        <%}%>
        <%})%>
        <button type="submit" class="btn btn-danger">Make Post</button>
          </form>
         <%}%>
      </div>
    </div>
  </div>
  